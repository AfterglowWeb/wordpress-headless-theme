{
  "name": "cmk/blank-theme",
  "description": "Blank Rest Wordpress Theme",
  "type": "theme",
  "license": "GPL-2.0-or-later",
  "version": "1.0.3",
  "authors": [
      {
        "name": "CÃ©dric Moris Kelly",
          "email": "cedric@moriskelly.com"
      }
  ],
  "repositories": [
    {
      "type": "composer",
      "url": "https://wpackagist.org"
    }
  ],
  "require": {
    "php": ">=7.4"
  },
  "autoload": {
    "psr-4": {
      "cmk\\blank\\": "inc/"
    }
  },
  "config": {
    "allow-plugins": {
      "composer/installers": true,
      "dealerdirect/phpcodesniffer-composer-installer": true
    },
    "platform": {
      "php": "7.4.33"
    },
    "sort-packages": true
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "^3.13",
    "wp-coding-standards/wpcs": "^3.2"
  },
  "scripts": {
    "build": [
      "@composer --no-plugins --no-interaction install --no-scripts --no-dev",
      "@composer --no-plugins --no-interaction archive"
    ],
    "lint": "phpcs --standard=Wordpress --extensions=php inc/",
    "fix": "phpcbf --standard=Wordpress --extensions=php inc/",
    "pre-autoload-dump": "Google\\Task\\Composer::cleanup"
  },
  "scripts-descriptions": {
    "build": "Build project artifact."
  }
  
}
